<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Background circle (behind day number) -->
    <View
        android:id="@+id/event_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/calendar_day_event"
        android:visibility="gone" />

    <View
        android:id="@+id/selection_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/calendar_day_selected"
        android:visibility="gone" />

    <!-- Selection highlight (on top when active) -->
    <TextView
        android:id="@+id/day_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/calendar_day_default"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCanvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:fitsSystemWindows="true">

    <!-- HEADER -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free-Form Builder"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:layout_marginStart="8dp"/>

    <!-- CANVAS AREA -->
    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#EFEFEF"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the menu to add items.\nDrag to move. Hold to edit."
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#999999"/>
    </FrameLayout>

    <!-- BOTTOM CONTROLS (Generate Button) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="80dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Generate"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C5CE7"/>
    </LinearLayout>

    <!-- NEW VERTICAL FLOATING TOOLBAR (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/floating_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/post_round_background"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_toolbar_filter_subtag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/newoutfit_background"
            android:contentDescription="Filter Subtags"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#6C5CE7" />

        <ImageButton
            android:id="@+id/btn_toolbar_filter_color"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/newoutfit_background"
            android:contentDescription="Filter Colors"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery"
            app:tint="#6C5CE7" />

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#D0D0D0" />

        <ImageButton
            android:id="@+id/btn_toolbar_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/newoutfit_background"
            android:contentDescription="Delete"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#6C5CE7" />

        <!-- Increase Size (+) -->
        <ImageButton
            android:id="@+id/btn_toolbar_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/newoutfit_background"
            android:contentDescription="Increase Size"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_input_add"
            app:tint="#6C5CE7" />

        <!-- Decrease Size (-) -->
        <ImageButton
            android:id="@+id/btn_toolbar_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/newoutfit_background"
            android:contentDescription="Decrease Size"
            android:padding="11dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/button_onoff_indicator_off"
            app:tint="#6C5CE7" />

        <!-- Lock Button -->
        <ImageButton
            android:id="@+id/btn_toolbar_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/newoutfit_background"
            android:contentDescription="Lock Position"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_lock_idle_lock"
            app:tint="#6C5CE7" />

        <!-- Divider -->

        <!-- Filter by Subtag (Icon representing tags) -->

        <!-- Filter by Color (Icon representing color/edit) -->
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/filter_options_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/floating_toolbar"
        app:layout_constraintStart_toEndOf="@+id/floating_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:scrollbars="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:selectionRequired="false"
                    app:singleLine="false"
                    app:singleSelection="false">

                    <!-- Example Chips (Populate these programmatically based on selection) -->
                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option 1" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option 2" />

                </com.google.android.material.chip.ChipGroup>
            </ScrollView>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/btn_filter_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Finish"
                    android:textColor="#6C5CE7"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ... existing code ... -->



    <!-- RESULTS OVERLAY (Hidden by default) -->
    <FrameLayout
        android:id="@+id/resultsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F6F8"
        android:elevation="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Results Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generated Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageButton
                    android:id="@+id/btnCloseResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false"/>
        </LinearLayout>
    </FrameLayout>


    <!-- BUBBLE ACTION BUTTONS -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPremade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/fabHistory"
        app:layout_constraintEnd_toEndOf="@id/fabMenu"
        app:layout_constraintStart_toStartOf="@id/fabMenu"
        android:contentDescription="Premade Box"
        android:visibility="gone"
        android:scaleX="0"
        android:scaleY="0"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_add"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/fabPremade"
        app:layout_constraintEnd_toEndOf="@id/fabMenu"
        app:layout_constraintStart_toStartOf="@id/fabMenu"
        android:contentDescription="Add New Box"
        android:visibility="gone"
        android:scaleX="0"
        android:scaleY="0"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_recent_history"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/fabMenu"
        app:layout_constraintEnd_toEndOf="@id/fabMenu"
        app:layout_constraintStart_toStartOf="@id/fabMenu"
        android:contentDescription="History"
        android:visibility="gone"
        android:scaleX="0"
        android:scaleY="0"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_add"
        app:backgroundTint="#6C5CE7"
        app:tint="#FFFFFF"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Menu" />

</androidx.constraintlayout.widget.ConstraintLayout>

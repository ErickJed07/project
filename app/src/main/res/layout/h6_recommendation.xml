<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#F8F9FA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outfit of the Day"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <!-- Outfit Display Container -->
    <!-- Changed height to 0dp and weight to 1 so it takes all available space -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <!-- Top Item -->
        <!-- Changed height to 0dp and weight to 1 -->
        <ImageView
            android:id="@+id/imgTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/box_background" />

        <!-- Bottom Item -->
        <!-- Changed height to 0dp and weight to 1 -->
        <ImageView
            android:id="@+id/imgBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/box_background" />
    </LinearLayout>

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnShuffle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#2196F3"
            android:text="Shuffle" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Closet"
        android:layout_marginTop="20dp"
        android:backgroundTint="#757575"/>

</LinearLayout>
